{
  "name": "etbs-assessment",
  "version": "1.0.0",
  "keywords": [],
  "author": "Daniel Oguejiofor",
  "license": "ISC",
  "description": "Assessment from Great Brands Nig LTD -- Event Ticket Booking System",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "tsc && tsc-alias",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "start:prod": "npm run build && npm run start",
    "test": "dotenv -e .env.test -- cross-env NODE_ENV=test jest --watchAll --coverage",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "prisma:init": "prisma init",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --preview-feature",
    "prisma:test:migrate": "dotenv -e .env.test -- npx prisma migrate dev",
    "clean": "rimraf dist"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "5.20.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.2.2",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.3",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.4",
    "@types/supertest": "^6.0.2",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.11.1",
    "jest": "^29.7.0",
    "node-config": "^0.0.2",
    "nodemon": "^3.1.7",
    "prisma": "^5.20.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  }
}
